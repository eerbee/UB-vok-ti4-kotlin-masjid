<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_identitas-masjid"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/judul_pulau"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Identitas Masjid"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caption_pulau"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/judul_pulau"
                        android:layout_marginTop="37dp"
                        android:text="Managemen informasi mengenai nama dan lokasi masjid"
                        android:textColor="#000000"
                        android:textStyle="normal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_jadwal-sholat"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/judul_pilgan"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Jadwal Sholat"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caption_pilgan"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/judul_pilgan"
                        android:layout_marginTop="37dp"
                        android:text="Manajemen informasi mengenai jadwal sholat 5 waktu"
                        android:textColor="#000000"
                        android:textStyle="normal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pengumuman-masjid"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/judul_daerah"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Pengumuman Masjid"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caption_daerah"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/judul_daerah"
                        android:layout_marginTop="37dp"
                        android:text="Manajemen infromasi terhadap pengumuman masjid"
                        android:textColor="#000000"
                        android:textStyle="normal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_marquee"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/judul_lagu"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Marquee Masjid"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/caption_lagu"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/judul_lagu"
                        android:layout_marginTop="37dp"
                        android:text="Manajemen informasi mengenai marquee pada masjid"
                        android:textColor="#000000"
                        android:textStyle="normal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>